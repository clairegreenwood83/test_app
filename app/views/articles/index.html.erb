<div class="article-index">
<h1>Articles</h1>
<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by Claire Greenwood
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, articles_path(article) %></h5>
            <p class="card-text"><%= truncate(article.body, length: 100) %></p>
            <%= link_to "View", article_path(article), class:"btn btn-outline-info" %>
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info" %>
            <%= link_to "Delete", article_path(article), class: "btn btn-outline-info", data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-muted">
             2 days ago
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row create_new">
    <%= link_to "Create New Article", new_article_path, class: "article-link" %>
  </div> 
</div>