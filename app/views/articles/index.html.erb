<div class="container">
    <div class="row title">

        <h1>Articles</h1>

        <table>
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @articles.each do |article| %>
            <tr>
              <td><%= article.title %></td>
              <td><%= article.body %></td>
              <td> placeholder </td>
            </tr>
            <% end %>
          </tbody>
        <table>
    </div>
    <div class="row create_new">
      <%= link_to "Create New Article", new_article_path, class: "article-link" %>
    </div>
</div>  



