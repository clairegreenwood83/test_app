<div class="container">
    <div class="row title">

        <h1>Articles</h1>

            <ul>
              <% @articles.each do |article| %>
                <% unless article.archived? %>
                  <li>
                    <%= link_to article.title, article, class: "article-link" %>
                  </li>
                <% end %>
              <% end %>
            </ul>

<%= link_to "New Article", new_article_path, class: "article-link" %>


